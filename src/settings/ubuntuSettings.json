{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateBaseUrl": {
        "type": "string",
        "metadata": {
            "description": "The base url for templates"
        }
    },
    "esSettings": {
        "type": "object",
        "metadata": {
            "description" : "The Elasticsearch settings"
        }
    },
    "commonVmSettings": {
        "type": "object",
        "metadata": {
            "description" : "Shared VM settings"
        }
    },
    "phoneHomeSettings": {
        "type": "object",
        "metadata": {
            "description": "Deployment details sent back to our CRM, only needed when deploying from the marketplace, optional in the ARM template"
        }
    },
    "topologySettings": {
        "type": "object",
        "metadata": {
            "description": "Aggregate for topology variable"
        }
    },
    "networkSettings": {
      "type": "object",
      "metadata": {
        "description": "Network settings"
      }
    },
    "azureCloudStorageAccount": {
        "type": "object",
        "metadata": {
            "description": "The storage settings for the Azure Cloud plugin"
        }
    },
    "elasticTags": {
      "type": "object",
      "defaultValue": {
        "provider": "648D2193-0CE0-4EFB-8A82-AF9792184FD9"
      },
      "metadata": {
        "description": "A unique identifier to allow the Azure Infrastructure to understand the origin of resources deployed to Azure. You do not need to supply a value for this."
      }
    }
  },
  "variables": {
    "managementPort": 22,
    "nodesTemplateUrl": "[concat(parameters('templateBaseUrl'), 'partials/ubuntu-node-resources.json')]",
    "kibanaIpTemplates": {
      "No": "empty/empty-kibana-ip-resources.json",
      "Yes": "ips/kibana-ip-resources.json"
    },
    "kibanaIpTemplateUrl": "[concat(parameters('templateBaseUrl'), variables('kibanaIpTemplates')[parameters('topologySettings').kibana])]"
  },
  "resources": [
    {
      "name": "kibana-ip",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "dependsOn": [
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('kibanaIpTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "templateBaseUrl": {
            "value": "[parameters('templateBaseUrl')]"
          },
          "location": {
            "value": "[parameters('commonVmSettings').location]"
          },
          "namespace": {
            "value": "[concat(parameters('commonVmSettings').namespacePrefix, 'kibana')]"
          },
          "networkSettings": {
            "value": "[parameters('networkSettings')]"
          },
          "https": {
            "value": "[parameters('topologySettings').kibanaHttps]"
          },
          "managementPort": {
            "value": "[variables('managementPort')]"
          },
          "elasticTags": {
            "value": "[parameters('elasticTags')]"
          }
        }
      }
    },
    {
      "name": "elasticsearch-nodes",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/','kibana-ip')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nodesTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "templateBaseUrl": {
            "value": "[parameters('templateBaseUrl')]"
          },
          "commonVmSettings": {
            "value": "[parameters('commonVmSettings')]"
          },
          "topologySettings": {
            "value": "[parameters('topologySettings')]"
          },
          "networkSettings": {
            "value": "[parameters('networkSettings')]"
          },
          "esSettings": {
            "value": "[parameters('esSettings')]"
          },
          "phoneHomeSettings": {
            "value": "[parameters('phoneHomeSettings')]"
          },
          "azureCloudStorageAccount": {
            "value": "[parameters('azureCloudStorageAccount')]"
          },
          "kibanaIp": {
            "value": "[reference('kibana-ip').outputs.fqdn.value]"
          },
          "elasticTags": {
            "value": "[parameters('elasticTags')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "kibana": {
      "value": "[reference('kibana-ip').outputs.fqdn.value]",
      "type": "string"
    },
    "jumpboxssh": {
      "value": "[reference('elasticsearch-nodes').outputs.jumpboxssh.value]",
      "type": "string"
    }
  }
}
